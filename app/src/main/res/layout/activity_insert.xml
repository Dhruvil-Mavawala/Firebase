<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Person"
        android:background="@color/purple_200"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :-"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Enter the name"
        android:paddingLeft="10dp"
        android:background="@drawable/style_edittext"
        android:id="@+id/etnameadd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course :-"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter the Course"
        android:paddingLeft="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/style_edittext"
        android:id="@+id/etcourseadd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :-"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="10dp"
        android:hint="Enter the Email"
        android:background="@drawable/style_edittext"
        android:id="@+id/etemailadd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No :-"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Enter the Mobile No"
        android:background="@drawable/style_edittext"
        android:id="@+id/etmobadd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="picture :-"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="10dp"
        android:hint="Enter the picture"
        android:background="@drawable/style_edittext"
        android:id="@+id/etpicadd"/>

    <Button
        android:id="@+id/btninsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:backgroundTint="#F57F17"/>


</LinearLayout>